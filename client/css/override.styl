// ---------------
// Color Variables
// ---------------

// clrs.cc Colors
$navy   = #001f3f
$blue   = #0074D9
$aqua   = #7FDBFF
$olive  = #3D9970
$green  = #2ECC40
$yellow = #FFDC00
$red    = #FF4136
$maroon = #85144b
$silver = #DDDDDD


// My Colors
$orange     = rgb(238, 162, 54)
$darkOrange = #FF851B
$purple     = #7100FF
$lightBlue  = #08c
$darkBlue   = #00679A
$blueHover  = #243E77
$lightRed   = #F14040
$darkRed    = #D00404
$darkerRed  = #920303
$grey       = #E8E8E8

// ------------
// Label Clases
// ------------

.label.label-purple
  background: $purple

.label.label-orange
  background: $orange 
    
.label.label-darkBlue
  background: $darkBlue

// -------------------
// Font Awesome Clases
// -------------------

.fa-edit-stack
  cursor: pointer

.fa-edit-stack > a > i.fa-stack-2x
  color:#F74803 !important

.fa-edit-stack:hover > a > i.fa-stack-2x
  color: rgb(255, 108, 50) !important

.fa-stack-in-label > .fa-stack-2x
  top: 4px;
  left: 0px;
  font-size: 1.4em;
  
.fa-super
  font-size: 0.7em;
  vertical-align: super;

// -------------
// Helper Clases
// ------------- 

.spinner-container
  min-height: 100px
  display: block

.unselectable
  -webkit-touch-callout: none
  -webkit-user-select: none
  -khtml-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none

.padding
  margin-top: 10px;
  margin-bottom: 10px;
  
.add-padding
  padding: 15px
  
.full-width
  width: 100%

.pointer
  cursor: pointer
  
.row.row-padding-bottom
  padding-bottom: 10px
  
.row.row-padding-bottom:last-child
  padding-bottom: 0px

// --------------
// Sidenav Clases
// --------------

.side-nav-block > ul.list-unstyled > a:hover
  color: #fff

// ------------
// Image Clases
// ------------

.img-responsive-gux
  max-height: 160px
  margin: auto
  height: inherit

// -----------
// Form Clases
// -----------

.form-control
  opacity: .8 !important
  color: #000 !important

.form-control:hover,
  opacity: 1 !important
  border: 1px solid $darkBlue !important

.form-control:focus
  opacity: 1 !important
  border: 1px solid $lightBlue !important
  box-shadow: none
  
.row-multiple-addresses
  margin-bottom: 10px

// --------------
// Heading Clases
// --------------

h4
  padding-top: 5px !important
  
// ----------
// Text Clases
// ----------

.text-orange
  color: $orange
  
.text-orange:hover
.text-orange:focus
.text-orange:active
  color: $darkOrange

.text-darkRed
  color: $darkRed

.text-darkRed:hover
.text-darkRed:focus
.text-darkRed:active
  color: $darkerRed
  
.text-muted
  opacity: .6 !important

.text-remove
  color: $darkRed
  
.text-remove:hover
.text-remove:focus
  color: $lightRed
  
.text-remove:visited
  color: $darkerRed

// -----------
// List Clases
// -----------

.list-inline > li
  display: inline-block
  padding-right: 0
  padding-left: 0
  padding-top: 5px
    
ul.list-text-hover > li:hover
  cursor: pointer
  color: $lightBlue  

.list-inline-tags
  margin-top: -10px;
  margin-left: 0px;

// -------------
// Button Clases
// -------------

.btn-same-width-25 > button.btn
  width: 25px
  
// ------------
// Table Clases
// ------------

.table > tbody > tr > td
  vertical-align: middle

.table > tbody > tr > td.padding-right-0
  padding-right: 0

.table > tbody > tr > td.padding-0
  padding: 0
  
.table-hover > tbody > tr:hover
  background-color: $grey
 
.table > thead > tr > th.th-pointer
  cursor: pointer
  
.table-first-border-top-none > tbody > tr:first-child > td
  border-top: none;
  
.table.table-margin-bottom-0
  margin-bottom: 0
  
.table.table-padding-left-0 > tbody > tr > td
  padding-left: 0

/*  
.table-hover > tbody > tr:hover > td > ul.list-text-hover > li > i
.table-hover > tbody > tr:hover > td > ul.list-text-hover > li > dt > i
  color: $orange
*/

// -------------
// QRcode Styles
// -------------
div#qrcode > img
  width: 100%
  padding: 30px
  
// -------------
// span wells
// -------------

$primary = $navy
$danger  = #FF4136
$success = $olive

.span-well
  border-width: 2px;
  border-style: solid;
  border-color: black;
  color: inherit;
  width: 100%
  display: block
  padding: 15px
  border-radius: 15px
  
.span-well > .span-well-heading
  margin-bottom: 10px

.span-well.span-well-primary
  color: $primary
  border-color: $primary  

.span-well.span-well-danger
  color: $danger
  border-color: $danger
  
.span-well.span-well-success
  color: $success
  border-color: $success

.span-well.span-well-primary > .span-well-heading
  color: $primary
  
.span-well.span-well-danger > .span-well-heading
  color: $danger
  
.span-well.span-well-success > .span-well-heading
  color: $success
  
.span-well > .span-highlight
  color: white
  padding: 2px
  margin-left: -15px
  margin-right: -15px
  
.span-well.span-well-primary > .span-highlight
  background-color: $primary
  
.span-well.span-well-danger > .span-highlight
  background-color: $danger
  
.span-well.span-well-success > .span-highlight
  background-color: $success