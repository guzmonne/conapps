@import 'nib'

$orange    = #F74803
$purple    = #7100FF
$lightBlue = #08c
$darkBlue  = #00679A

.label.label-purple
    background: $purple

.label.label-orange
    background: $orange

.text-orange
  color: #F74803

.fa-edit-stack
  cursor: pointer

.fa-edit-stack > a > i.fa-stack-2x
  color:#F74803 !important

.fa-edit-stack:hover > a > i.fa-stack-2x
  color: rgb(255, 108, 50) !important

.unselectable
  -webkit-touch-callout: none
  -webkit-user-select: none
  -khtml-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none

.list-inline > li
    display: inline-block
    padding-right: 0
    padding-left: 0
    padding-top: 5px

.side-nav-block > ul.list-unstyled > a:hover
  color: #fff

.img-responsive-gux
  max-height: 160px
  margin: auto
  height: inherit

.form-control
  opacity: .8 !important
  color: #000 !important
  

.form-control:hover,
  opacity: 1 !important
  border: 1px solid $darkBlue !important

.form-control:focus
  opacity: 1 !important
  border: 1px solid $lightBlue !important

h4
  padding-top: 5px !important
  
.text-muted
  opacity: .6 !important
  