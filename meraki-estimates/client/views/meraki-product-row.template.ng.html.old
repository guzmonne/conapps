<div class="panel panel-default animated fadeIn">
	<div class="panel-heading" style="height: 65px;">
		<h4 class="pull-left">
			<strong>{{::vm.product.model}}</strong>
			<small>Familia {{::vm.product.family}}</small>
		</h4>
		<h4 class="pull-right" label-by-line="{{::vm.product.line}}" style="margin-top: 10px;">
			{{::vm.product.line}}
		</h4>
		<br>
		<h6 class="padding text-muted">
			{{::vm.product.description || 'Sin Descripción...'}}
		</h6>
	</div>
	<div class="panel-body">
		<div class="content">
			<div class="row">
				<div class="col-sm-3">
					<div class="img-align-middle-for-155">
						<img width="190" ng-src="{{::vm.product.image}}" alt="Product Image">
					</div>
				</div>
				<div class="col-sm-9">
					<table class="table">
						<thead>
							<tr>
								<th></th>
								<th>Lista [USD]</th>
								<th>Partner [USD]</th>
								<th>Deal [USD]</th>
								<th>NFR [USD]</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td><strong>Hardware</strong></td>
								<td>{{vm.product.listPrice | setDecimal:2}}</td>
								<td>{{vm.product.partnerPrice | setDecimal:2}}</td>
								<td>{{vm.product.dealPrice | setDecimal:2}}</td>
								<td>{{vm.product.nfrPrice | setDecimal:2}}</td>
							</tr>
							<tr>
								<td><strong>Lic. 1 años</strong></td>
								<td>100.00</td>
								<td>80.00</td>
								<td>60.00</td>
								<td>20.00</td>
							</tr>
							<tr>
								<td><strong>Lic. 3 años</strong></td>
								<td>100.00</td>
								<td>80.00</td>
								<td>60.00</td>
								<td>20.00</td>
							</tr>
							<tr ng-show="vm.moreInfo">
								<td><strong>Lic. 5 años</strong></td>
								<td>100.00</td>
								<td>80.00</td>
								<td>60.00</td>
								<td>20.00</td>
							</tr>
							<tr ng-show="vm.moreInfo">
								<td><strong>Lic. 7 años</strong></td>
								<td>100.00</td>
								<td>80.00</td>
								<td>60.00</td>
								<td>20.00</td>
							</tr>
							<tr ng-show="vm.moreInfo">
								<td><strong>Lic. 10 años</strong></td>
								<td>100.00</td>
								<td>80.00</td>
								<td>60.00</td>
								<td>20.00</td>
							</tr>
						</tbody>
					</table>
				</div>
				<div class="col-sm-offset-3 col-sm-9" ng-show="vm.moreInfo">
					<meraki-product-attributes 
						attributes="::vm.product.attributes"
						line="{{::vm.product.line}}">
					</meraki-product-attributes>
				</div>
				<div class="col-sm-offset-3 col-sm-9 pointer more-info" style="margin-top: 20px" ng-click="vm.moreInfo = !vm.moreInfo">
					<a href="javascript:void(0)" class="more-info-anchor">
						<strong><span ng-hide="vm.moreInfo">Más</span><span ng-show="vm.moreInfo">Menos</span> Información</strong>
						<hr>
						<i class="fa fa-chevron-down pull-right" ng-hide="vm.moreInfo"></i>
						<i class="fa fa-chevron-up pull-right" ng-show="vm.moreInfo"></i>
					</a>
				</div>
			</div>
		</div>
	</div>
	<div class="panel-footer">
		<div class="container">
			<div class="row">
				<div class="col-sm-4">
					<button
						class="btn"
						ng-class="{true: 'btn-danger', false: 'btn-success'}[vm.product.selected === true]"
						ng-click="vm.product.selected = !vm.product.selected">
						<i 	class="fa"
								ng-class="{true: 'fa-minus', false: 'fa-plus'}[vm.product.selected === true]">
						</i>
						<span ng-hide="vm.product.selected === true">Agregar</span>
						<span ng-show="vm.product.selected === true">Eliminar</span>
					</button>
				</div>
				<div class="col-sm-offset-4 col-sm-4" ng-show="vm.product.selected === true">
					<input type="number" min="0" step="1" class="form-control text-center" ng-model="vm.product.quantity">
				</div>
			</div>
		</div>
	</div>
</div>